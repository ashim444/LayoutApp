<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".SecondActivity">

        <include
            android:id="@+id/second_toolbar_horizental_constraints"
            layout="@layout/toolbar"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="82dp"
            android:layout_height="79dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/second_toolbar_horizental_constraints"
            app:layout_constraintTop_toTopOf="@+id/second_appbar_constraints"
            app:srcCompat="@drawable/deawable_second_person_icon" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/second_appbar_constraints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="111dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/second_toolbar_horizental_constraints"
            app:layout_constraintTop_toTopOf="@+id/second_appbar_constraints"
            app:srcCompat="@drawable/drawable_second_message_icon" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/second_toolbar_horizental_constraints"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/second_appbar_constraints"
            app:srcCompat="@drawable/drawable_second_addperson_icon" />

        <TextView
            android:id="@+id/second_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/second_dummy_name"
            style="@style/secondNumberDesign"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/second_articel_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/second_recycleview_item1"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/second_name_text_view" />

        <TextView
            android:id="@+id/second_follower_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/second_dummy_number"
            style="@style/secondNumberDesign"
            app:layout_constraintEnd_toStartOf="@+id/second_post_number"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/second_text_view_jorizental_constraints" />

        <TextView
            android:id="@+id/second_post_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/second_dummy_number"
            style="@style/secondNumberDesign"
            app:layout_constraintEnd_toStartOf="@+id/second_following_number"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/second_follower_number"
            app:layout_constraintTop_toTopOf="@+id/second_text_view_jorizental_constraints" />

        <TextView
            android:id="@+id/second_following_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/second_dummy_number"
            style="@style/secondNumberDesign"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/second_post_number"
            app:layout_constraintTop_toTopOf="@+id/second_text_view_jorizental_constraints" />

        <TextView
            android:id="@+id/second_follower_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/second_dummy_name"
            style="@style/secondTextDesign"
            app:layout_constraintEnd_toStartOf="@+id/second_post_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/second_follower_number" />

        <TextView
            android:id="@+id/second_post_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/second_dummy_name"
            style="@style/secondTextDesign"
            app:layout_constraintEnd_toStartOf="@+id/second_following_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/second_follower_text"
            app:layout_constraintTop_toBottomOf="@+id/second_post_number" />

        <TextView
            android:id="@+id/second_following_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/second_dummy_name"
            style="@style/secondTextDesign"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/second_post_text"
            app:layout_constraintTop_toBottomOf="@+id/second_following_number" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/second_text_view_jorizental_constraints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="357dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/second_recycle_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/second_follower_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>